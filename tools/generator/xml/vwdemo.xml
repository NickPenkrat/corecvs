<poco version="5.0">
  
  <include name="base.xml"/>
  <include name="featuring.xml"/>
  <include name="filtering.xml"/>    
  <include name="matching.xml"/>
  
  <enum name="CameraId">
    <item name="Front" id="0" comment="Front"/>
    <item name="Rear"  id="1" comment="Rear"/>
    <item name="Left"  id="2" comment="Left"/>
    <item name="Right" id="3" comment="Right"/>
  </enum>

  <enum name="MousePointerType">
    <item name="Single display"  id="0" comment="Single display"/>
    <item name="Dual display"    id="1" comment="Dual display"/>
  </enum>
  
  <class name="VW" description="VW parameters">
    <!-- Kinematics -->
    <field type="double"    name="carPitch"                  defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="carYaw"                    defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="carRoll"                   defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="gravityCenterHight"        defaultValue="400.0"   min="0.0"         max="3000.0"   step="1.0"/>
    <field type="int"       name="carSpeed"                  defaultValue="0"       min="0"           max="120"      step="1"/>
        <!-- slider here -->
    <field type="CameraId" name="CameraId"/>
    <field type="double"    name="camPitch"                  defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="camYaw"                    defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="camRoll"                   defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="camX"                      defaultValue="0.0"     min="-10000.0"    max="10000.0"  step="1.0"/>
    <field type="double"    name="camY"                      defaultValue="0.0"     min="-10000.0"    max="10000.0"  step="1.0"/>
    <field type="double"    name="camZ"                      defaultValue="0.0"     min="-10000.0"    max="10000.0"  step="1.0"/>
    <field type="double"    name="principalX"                defaultValue="0.0"     min="0.0"         max="1000.0"   step="1.0"/>
    <field type="double"    name="principalY"                defaultValue="0.0"     min="0.0"         max="1000.0"   step="1.0"/>
    <field type="double"    name="focal"                     defaultValue="150.0"   min="0.0"         max="9999.0"   step="1.0"/>
    <field type="bool"      name="autoGuessPrincipal"        defaultValue="true"/>
    <field type="bool"      name="simulate"                  defaultValue="false"/>
    <field type="double"    name="simCarPitch"               defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="simCarYaw"                 defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="simCamPitch"               defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="simCamYaw"                 defaultValue="0.0"     min="-360.0"      max="360.0"    step="0.1"/>
    <!-- Saccade -->
    <field type="double"    name="saccLeftCamYaw"            defaultValue="30.0"    min="-360.0"      max="360.0"    step="0.1"/>
    <field type="double"    name="saccRightCamYaw"           defaultValue="-30.0"   min="-360.0"      max="360.0"    step="0.1"/>
        <!-- buttons here -->
    <!-- Presentation -->
    <field type="int"       name="framesToSkip"              defaultValue="0"       min="0"           max="99"       step="1"/>
    <field type="bool"      name="flowRepeat"                defaultValue="false"/>
    <field type="double"    name="carValuesScale"            defaultValue="1.0"     min="0.0"         max="99.99"    step="1.0"/>
    <field type="double"    name="camValuesScale"            defaultValue="1.0"     min="0.0"         max="99.99"    step="1.0"/>
    <field type="double"    name="graphSpread"               defaultValue="45.0"    min="0.0"         max="360.0"    step="1.0"/>
    <field type="int"       name="graphHeight"               defaultValue="0"       min="0"           max="2000"     step="1"/>
    <field type="int"       name="graphWidth"                defaultValue="0"       min="0"           max="2000"     step="1"/>
    <field type="double"    name="fuSpread"                  defaultValue="40.0"    min="0.01"        max="100.99"   step="1.0"/>
    <field type="int"       name="fuHeight"                  defaultValue="600"     min="1"           max="1000"     step="1"/>
    <!-- Filtration -->
    <field type="double"    name="minFlowLen"                defaultValue="3.0"     min="-360.0"       max="360.0"   step="1.0"/>
    <field type="double"    name="minDV"                     defaultValue="0.0"     min="-360.0"       max="360.0"   step="1.0"/>
    <field type="double"    name="sigma"                     defaultValue="15.0"    min="-360.0"       max="360.0"   step="1.0"/>
    <field type="double"    name="maxFuOverDV"               defaultValue="6.0"     min="0.0"          max="99.99"   step="1.0"/>
    <field type="int"       name="skipEvery"                 defaultValue="1"       min="1"            max="1000"    step="1"/>
    <field type="double"    name="measurableFu"              defaultValue="3.0"     min="0.0"          max="1000.0"  step="1.0"/>
    <field type="double"    name="carJPrec"                  defaultValue="1.5"     min="0.0"          max="15.0"    step="1.0"/>
    <field type="double"    name="camJPrec"                  defaultValue="15.0"    min="0.0"          max="1500.0"  step="1.0"/>
    <field type="double"    name="carPitchMin"               defaultValue="-5.0"    min="-360.0"       max="360.0"   step="1.0"/>
    <field type="double"    name="carYawMin"                 defaultValue="-5.0"    min="-360.0"       max="360.0"   step="1.0"/>
    <field type="double"    name="camPitchMin"               defaultValue="-40.0"   min="-360.0"       max="360.0"   step="1.0"/>
    <field type="double"    name="camYawMin"                 defaultValue="-40.0"   min="-360.0"       max="360.0"   step="1.0"/>
    <!-- Filtration2 -->
    <field type="bool"      name="filterNegativeDist"        defaultValue="false"/>
    <field type="bool"      name="filterNegativeZ"           defaultValue="false"/>
    <field type="int"       name="corridorWidth"             defaultValue="0"       min="0"            max="100000"  step="1"/>
    <field type="int"       name="corridorLength"            defaultValue="0"       min="0"            max="100000"  step="1"/>
    <field type="int"       name="corridorHeight"            defaultValue="0"       min="0"            max="100000"  step="1"/>
    <!-- Kalman -->
    <field type="bool"      name="kalmanOn"                  defaultValue="true"/>
    <field type="int"       name="kalmanRounds"              defaultValue="1"       min="1"            max="100000"  step="1"/> 
    <field type="bool"      name="carPitchEnable"            defaultValue="true"/>
    <field type="double"    name="pCarPitch"                 defaultValue="0.1"     min="0.0"          max="1000.0"  step="0.01"/>
    <field type="double"    name="qCarPitch"                 defaultValue="0.001"   min="0.0"          max="1000.0"  step="0.001"/>
    <field type="bool"      name="carYawEnable"              defaultValue="true"/>
    <field type="double"    name="pCarYaw"                   defaultValue="0.1"     min="0.0"          max="1000.0"  step="0.01"/>
    <field type="double"    name="qCarYaw"                   defaultValue="0.001"   min="0.0"          max="1000.0"  step="0.001"/>
    <field type="bool"      name="camPitchEnable"            defaultValue="true"/>
    <field type="double"    name="pCamPitch"                 defaultValue="0.1"     min="0.0"          max="1000.0"  step="0.01"/>
    <field type="double"    name="qCamPitch"                 defaultValue="0.00001" min="0.0"          max="1000.0"  step="0.00001"/>
    <field type="bool"      name="camYawEnable"              defaultValue="true"/>
    <field type="double"    name="pCamYaw"                   defaultValue="0.1"     min="0.0"          max="1000.0"  step="0.01"/>
    <field type="double"    name="qCamYaw"                   defaultValue="0.00001" min="0.0"          max="1000.0"  step="0.00001"/>
    <field type="double"    name="rNoise"                    defaultValue="5.0"     min="-360.0"       max="360.0"   step="1.0"/>
    <!-- OpenCVKLT -->
    <field type="bool"      name="useKLT"                    defaultValue="false"/>
    <field type="double"    name="selectorQuality"           defaultValue="0.05"    min="0.0"          max="99.99"   step="1.0"/>
    <field type="bool"      name="useHarris"                 defaultValue="false"/>
    <field type="double"    name="selectorDistance"          defaultValue="10.0"    min="0.0"          max="999.0"   step="1.0"/>
    <field type="double"    name="harrisK"                   defaultValue="0.05"    min="0.0"          max="99.99"   step="1.0"/>
    <field type="int"       name="selectorZone"              defaultValue="15"      min="0"            max="99"      step="1"/>
    <field type="int"       name="kltZone"                   defaultValue="15"      min="0"            max="99"      step="1"/> 
    <field type="bool"      name="useSpherical"              defaultValue="false"/>    
  </class> 
  
  <parametersMapper>
    <field type="Base"         name="Base"/>
    <field type="Featuring"    name="Featuring"/>
    <field type="Filtering"    name="FlowFiltering"/>
    <field type="Matching"     name="Matching"/>
    <field type="VW"           name="VW"/>
  </parametersMapper>

</poco>

