<poco version="5.0">
  <class name="Fisheye Egomotion Parameters">

    <field type="bool"      name="unwarp"    defaultValue="false" description="Produce unwrapped image" />
    <field type="bool"      name="joint"     defaultValue="false" description="Make joint optimsation at the end" />
    <field type="bool"      name="scene"     defaultValue="false" description="Output info in CVS .json scene format" />
    <field type="bool"      name="caps"      defaultValue="false" description="Print capabilities and exit" />
    <field type="bool"      name="subpixel"  defaultValue="false" description="Force subpixel flow precision. If applicable" />

    <field type="string"    name="intrinsics"     defaultValue="" description=""/>
    <field type="string"    name="provider"       defaultValue="CVS" description="which flow provider to use. For options see --caps" />

    <field type="int"      name="frames"  defaultValue="10" decimals="6" min="-50000" max="50000" description="How many frames to process"/>
    <field type="int"      name="skipf"   defaultValue="0"  decimals="6" min="-50000" max="50000" description="Skip n frames every frame"/>
    <field type="double"   name="scaler"  defaultValue="1.0"  decimals="3" min="0.01" max="5" description="Scale image before processing"/>

    <field type="bool"   name="use5point"   defaultValue="false" description="Use 5 point based " />
    <field type="double" name="rthreshold"  defaultValue="0.009" decimals="6" min="0" max="500"   description="Threshold for RANSAC during model estimation"/>
    <field type="int"    name="riterations" defaultValue="100"                min="1" max="50000" description="Ransac max iterations"/>
    <field type="double" name="dthreshold"  defaultValue="0.009" decimals="6" min="0" max="500"   description="Threshold for actual detection"/>


    <field type="double" name="rsthreshold" suffix="px" defaultValue="2" decimals="3" min="0" max="500" description="Threshold for Static flow"/>
    <field type="double" name="rsthresprec" suffix="%"  defaultValue="70" decimals="3" min="0" max="500" description="precent to fit Static Thresold "/>

    <field type="double" name="dsthreshold" suffix="px" defaultValue="3" decimals="3" min="0" max="500" description="Threshold for Static actual detection"/>

    <!-- -->
    <field type="bool"   name="traceParams" defaultValue="false" description="Trace parameters of the provider" advanced="true" />


  </class>
</poco>
