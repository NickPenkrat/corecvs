<poco version="5.0">


    <enum name="Swipe Algorithm Type">
        <!--<item name="OFF"             id="0" comment="OFF"       />-->
        <item name="LSE Type"        id="0" comment="LSE"       />
        <item name="Speed Type"      id="1" comment="Speed"     />
        <item name="Zone Visit Type" id="2" comment="Zone Visit"/>
    </enum>

    <enum name="Pattern Type">
        <item name="pattern 1"   id="0" comment="pattern 1"/>
        <item name="pattern 2"   id="1" comment="pattern 2"/>
        <item name="pattern 3"   id="2" comment="pattern 3"/>
        <item name="pattern 4"   id="3" comment="pattern 4"/>
    </enum>

    <class name="Swipe Detector Parameters">
        <field type="double"       name="History To Cure"     defaultValue="4.0"  />
        <field type="double"       name="Distance To Cure"    defaultValue="0.1"  />
        <field type="double"       name="Pattern Min Beta"    defaultValue="1.0"  />
        <field type="double"       name="Pattern Scale"       defaultValue="1.0"  />
        <field type="double"       name="Min Data Percent"    defaultValue="30.0" />
        <field type="Pattern Type" name="Swipe Pattern"/>
		<field type="int"          name="Min Shift X"           defaultValue="40"  min="0" max="999" step="1"/>
		<field type="int"          name="Max Shift X"           defaultValue="300" min="0" max="999" step="1"/>
		<field type="int"          name="Min Shift Y"           defaultValue="20"  min="0" max="999" step="1"/>
		<field type="int"          name="Max Shift Y"           defaultValue="300" min="0" max="999" step="1"/>
		<field type="int"          name="Window start"        defaultValue="5"   min="0" max="999" step="1"/>
		<field type="int"          name="Window end"          defaultValue="10"  min="0" max="999" step="1"/>
    </class>

    <enum name="StabilizerType">
       <item name="Old one"   id="0" comment="Old one"/>
       <item name="New one"   id="1" comment="New one"/>
       <item name="None"      id="2" comment="None"/>       
    </enum>

    <class name="Mouse Handler Parameters">

	    <field type="double" name="Rotation Start Ratio"   defaultValue="1.0" min="0.5" max="16.0" step="0.1"/>
	    <field type="int"    name="Full Hand Start Size"   defaultValue="50"  min="1"   max="1024" step="1"/>
	
	    <!-- 6D Stabilizer -->
	    <field type="int"    name="Stabilizer 6D min"          defaultValue="15"  min="1"   max="1024" step="1"/>
	    <field type="int"    name="Stabilizer 6D max"          defaultValue="21"  min="1"   max="1024" step="1"/>
	    <field type="int"    name="History size"               defaultValue="5"   min="1"   max="99"   step="1"/>
	    <field type="double" name="Drift Factor"               defaultValue="0.5" min="0.0" max="1.0"  step="0.1"/>
        
	    <field type="StabilizerType"  name="StabilizerType"/>
	
	    <!-- These seem to be outdated  -->
	    <field type="int"    name="Holding Cursor Still Time" defaultValue="500"  min="100" max="10000" step="10"/>
	    <field type="int"    name="Idle Time"                 defaultValue="3000" min="100" max="10000" step="10"/>
	
	    <!-- Parameters for Flash Transport  -->
	    <field type="bool"   name="Auto Flash Transport"    defaultValue="true" />
	    <field type="int"    name="Flash Transport W"       defaultValue="1600"    min="0"      max="9999"    step="1"/>
	    <field type="int"    name="Flash Transport H"       defaultValue="1200"    min="0"      max="9999"    step="1"/>
	
	    <!-- Delay click -->
	    <field type="bool"   name="Delay Click On"         defaultValue="true"  />
	    <field type="bool"   name="Delay Click In Gesture" defaultValue="false" />
            <field type="int"    name="Delay Click Area"       defaultValue="1500"  min="30"   max="12000" step="1"/>
            <field type="int"    name="Delay Click Cycle"      defaultValue="600"   min="30"   max="12000" step="1"/>
            <field type="int"    name="Delay After Click"      defaultValue="300"   min="30"   max="12000" step="1"/>
            <field type="bool"   name="Stick to Buttons"       defaultValue="true"  />
            <field type="int"    name="Sticking Area"          defaultValue="150" min="1"   max="1024" step="10"/>
            <field type="int"    name="Delay Timeout"          defaultValue="200" min="1"   max="1024" step="10" comment="in ms"/>
    

	    <!-- Outdated. Should be removed -->
	    <field type="bool"   name="moveInGesture"         defaultValue="false"/>
	    <field type="bool"   name="plainClick"            defaultValue="false"/>
	
	    <field type="int"    name="Scroll From H Swipe"  defaultValue="10"  min="-9999"   max="9999" step="1"/>
            <field type="int"    name="Scroll From V Swipe"  defaultValue="10"  min="-9999"   max="9999" step="1"/>
       
	    <!-- ReferenceFrame -->
	    <field type="bool"   name="mirrorPointers"        defaultValue="false"/>
	
	    <!-- SwipeDetector -->
		<field type="bool"                      name="trackSwipe"              defaultValue="false">
	    <field type="Swipe Algorithm Type"      name="Swipe Algorithm Type"    widget="TabWidget"/>
	    <embed type="Swipe Detector Parameters" name="Swipe Parameters"/>
	    <field type="int"                       name="Swipe Repetition Delay"  defaultValue="20" />
     </class>
     
</poco>
